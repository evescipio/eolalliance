extends ./layouts/freightlayout

block content
    div(class='container' ng-controller='FreightController')
        div(class='row')
            div(class='col-md-6 col-md-offset-3')
                h2 Rewards Calculator
                h4 Reminder: NO CONTAINERS of any kind
        div(class='row')
            div(class='col-md-6 col-md-offset-3')
                form(class='eol_form' ng-submit='calculate(size, collateral)')
                    div(class='form-group')
                        label Contract Size (300K max | 60K recommended)
                        input(type='number' class='form-control' ng-model='size')
                    div(class='form-group')
                        label Collateral (max 5 Billion | Leave blank for no collateral)
                        input(type='number' class='form-control' ng-model='collateral')
                    button(type='submit' class='btn btn-default') Calculate
                    br
                    br
                    div(class='form-group')
                        label Set Reward: <span class="reward">{{ reward }}</span>
                    div(class='form-group')
                        label Recommendations:
                        ul(ng-repeat='recommendation in recommendations')
                            li {{ recommendation.text }}


    script(src='/javascripts/controllers/eolapp.controller.js')
